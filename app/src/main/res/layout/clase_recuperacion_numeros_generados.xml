<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".u2.claseRecuperacion.ejercicio1Numeros.NumerosGenerados">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/crngrvNumeros"
        android:layout_width="349dp"
        android:layout_height="417dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/crngbtMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min"
        app:layout_constraintStart_toStartOf="@+id/crngrvNumeros"
        app:layout_constraintTop_toBottomOf="@+id/crngrvNumeros" />

    <Button
        android:id="@+id/crngMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media"
        app:layout_constraintEnd_toStartOf="@+id/crngMax"
        app:layout_constraintStart_toEndOf="@+id/crngbtMin"
        app:layout_constraintTop_toBottomOf="@+id/crngrvNumeros" />

    <Button
        android:id="@+id/crngMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max"
        app:layout_constraintEnd_toEndOf="@+id/crngrvNumeros"
        app:layout_constraintTop_toBottomOf="@+id/crngrvNumeros" />

</androidx.constraintlayout.widget.ConstraintLayout>